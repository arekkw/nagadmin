<div class="users">
	<div class="user-list">
		<div class="row">
		{{#if isUserAdmin}}
			<div class="col-xs-2">
				{{#link-to 'users.edit' 'new'}}
				<button class='btn btn-success btn-sm'>
					<i class="icon-pencil align-top"></i>
					Create New User
				</button>
				{{/link-to}}
			</div>
		{{/if}}
		</div>
		<div class="space"></div>
		<div class="row">
			<div class="col-xs-12">
				<div class="table-responsive">
					<table id="users-table" class="table table-striped table-bordered table-hover">
						<thead>
							<tr>
								<th>Email</th>
								<th>First</th>
								<th class="hidden-480">Last</th>
								<th class="hidden-480">Account Created</th>
								<th class="hidden-480">Last Login</th>
								<th class="hidden-480">Role</th>
							{{#if isUserAdmin}}
								<th></th>
							{{/if}}
							</tr>
						</thead>

						<tbody>
						{{#each user in model}}
							<tr>
								<td>{{user.idToEmail}}</td>
								<td>{{user.firstName}}</td>
								<td class="hidden-480">{{user.lastName}}</td>
								<td class="hidden-480">{{formatted-date user.createDate 'LL'}}</td>
								<td class="hidden-480">{{formatted-date user.lastLoginDate 'fromDate'}}</td>
								<td class="hidden-480">{{user.rolesToString}}</td>
							{{#if isUserAdmin}}
								<td>
									<div class="btn-group">
										{{#link-to 'users.edit' user.id class="btn btn-xs btn-info"}}
											<i class="ace-icon fa fa-pencil bigger-120"></i>
										{{/link-to}}
										
										<button class="btn btn-xs btn-danger" {{action 'showModal' 'admin.confirmDeleteUserModal' user}}>
											<i class="ace-icon fa fa-trash-o bigger-120"></i>
										</button>
									</div>
								</td>
							{{/if}}
							</tr>
						{{/each}}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>